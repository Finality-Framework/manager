{
    "build": {
        "devPath": "../src",
        "distDir": "../src",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "Finality Framework",
        "version": "0.0.0"
    },
    "tauri": {
        "allowlist": {
            "dialog": {
                "all": true,
                "open": true
            },
            "shell": {
                "all": false,
                "open": true
            },
            "path": {
                "all": true
            }
        },
        "windows": [
            {
                "title": "Finality Framework",
                "width": 800,
                "height": 600
            }
        ],
        "security": {
            "csp": null
        },
        "bundle": {
            "active": true,
            "publisher":"Team Rainfall",
            "targets": [
                "deb",
                "nsis"
            ],
            "identifier": "team.rainfall.finality",
            "resources": [
                "./resources"
            ],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.ico"
            ],
            "windows": {
                "nsis": {
                    "languages": [
                        "English",
                        "SimpChinese"
                    ]
                }
            }
        }
    }
}